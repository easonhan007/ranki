<h3>Categories</h3>
<%= link_to "New category", new_category_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Creator</th>
    <th>Created At</th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id%></td>
        <td><%= link_to category.name, category %></td>
        <td><%= category.user.email %></td>
        <td><%= time_ago_in_words category.created_at%> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>

