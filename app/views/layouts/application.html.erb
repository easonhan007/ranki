  <body>
    <%= render('shared/nav')%>
    <%= render('shared/notice')%>
    <div class="container">
      <div class="row">
        <div class="col-md-8"> <%= yield %> </div>
        <div class="col-md-3 offset-md-1"><%= render('shared/user_nav') %></div>
      </div>
    </div>
  </body>
</html>
