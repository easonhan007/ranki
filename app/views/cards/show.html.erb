<div class="row">
  <div class="col-md-8 mx-auto">
    <p class="text text-success"><%= notice %></p>
    <div class="row">
      <%= render @card %>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to "Edit", edit_card_path(@card), class: 'btn btn-outline-primary'%> 
      </div>
      <div class="col">
        <%= link_to "Cards", cards_path, class: 'btn btn-outline-dark'%>
      </div>
      <div class="col">
        <%= button_to "Destroy", @card, method: :delete, class: 'btn btn-outline-danger'%>
      </div>
    </div>
  </div>
</div>

