<p style="color: green"><%= notice %></p>

<%= render @question %>

<div class="d-flex justify-content-between">
  <% if @question.user.id.eql?(current_user.id) %>
    <%= link_to "Edit this question", edit_question_path(@question), class: "btn btn-info" %> 
  <% end %>
  <%= link_to "Back to questions", questions_path, class: "btn btn-secondary" %>
  <% if @question.user.id.eql?(current_user.id) %>
    <%= button_to "Destroy this question", @question, method: :delete, class: "btn btn-danger" %>
  <% end %>
</div>
